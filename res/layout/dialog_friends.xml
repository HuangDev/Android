<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/blue_dialog_linear"
    android:minWidth="320dip" >

    <LinearLayout
        style="@style/blue_dialog_item_wraper"
        android:layout_height="60dip" >

        <ImageView
            style="@style/blue_dialog_item_icon"
            android:src="@drawable/icon_reddit_profile" />

        <TextView
            android:id="@+id/me_name"
            style="?title_text_ref"
            android:paddingLeft="8dip"
            android:text="Friends"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#1abcff" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/friend_list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </LinearLayout>

</LinearLayout>