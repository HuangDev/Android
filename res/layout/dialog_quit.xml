<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout style="@style/blue_dialog_linear" >

        <LinearLayout
            style="@style/blue_dialog_item_wraper"
            android:layout_height="60dip" >

            <TextView
                android:id="@+id/me_name"
                style="?title_text_ref"
                android:paddingLeft="8dip"
                android:text="Confirm Exit"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#1abcff" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dip" >

            <Button
                android:id="@+id/button_yes"
                android:layout_width="0dip"
                android:layout_height="48dip"
                android:layout_weight="1"
                android:background="@drawable/bg_imagebutton_state"
                android:text="YES" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/redditor_divider_color" >
            </LinearLayout>

            <Button
                android:id="@+id/button_no"
                android:layout_width="0dip"
                android:layout_height="48dip"
                android:layout_weight="1"
                android:background="@drawable/bg_imagebutton_state"
                android:text="NO" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>