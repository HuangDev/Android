<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?background_color_ref"
    android:orientation="vertical"
    android:paddingLeft="8dip"
    android:paddingRight="8dip"
    android:paddingTop="6dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            style="?title_text_ref"
            android:layout_marginLeft="6dip"
            android:layout_marginTop="6dip"
            android:text="TO " />

        <LinearLayout
            style="@style/blue_horizontal_divider"
            android:layout_marginTop="6dip" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/compose_to"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dip"
                android:layout_weight="1"
                android:hint="Username" >
            </EditText>

            <Button
                android:id="@+id/button_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Friends" 
                android:minHeight="42dp"
                />
        </LinearLayout>

        <TextView
            style="?title_text_ref"
            android:layout_marginLeft="6dip"
            android:layout_marginTop="6dip"
            android:text="SUBJECT"
            android:textSize="13sp" />

        <LinearLayout
            style="@style/blue_horizontal_divider"
            android:layout_marginTop="6dip" >
        </LinearLayout>

        <EditText
            android:id="@+id/compose_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip"
            android:hint="Subject" >
        </EditText>

        <TextView
            style="?title_text_ref"
            android:layout_marginLeft="6dip"
            android:layout_marginTop="6dip"
            android:text="MESSAGE"
            android:textSize="13sp" />

        <LinearLayout
            style="@style/blue_horizontal_divider"
            android:layout_marginTop="6dip" >
        </LinearLayout>

        <EditText
            android:id="@+id/compose_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip"
            android:hint="Message" >
        </EditText>

        <LinearLayout
            android:id="@+id/compose_captcha_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >
s

            <TextView
                style="?title_text_ref"
                android:layout_marginLeft="6dip"
                android:layout_marginTop="6dip"
                android:text="CAPTCHA"
                android:textSize="13sp" />

            <LinearLayout
                style="?horizontal_divider_ref"
                android:layout_marginBottom="6dip"
                android:layout_marginTop="6dip" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom" >

                <EditText
                    android:id="@+id/compose_captcha"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Captcha" >
                </EditText>

                <ImageView
                    android:id="@+id/compose_captcha_pic"
                    android:layout_width="120dip"
                    android:layout_height="50dip"
                    android:background="@drawable/loading_pic"
                    android:scaleType="fitXY" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>