<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dip"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/comment_space"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="12sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/comment_indicator"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:text=" "
        android:textColor="#00000000"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/comment_expand"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:src="@drawable/icon_expand_unselected" />
        <!-- author -->

        <TextView
            android:id="@+id/comment_author"
            style="?comment_author_ref"
            android:layout_marginRight="6dip"
            android:paddingRight="6dip"
            android:singleLine="true" />

        <!-- children  (6 children) -->

        <TextView
            android:id="@+id/comment_children"
            style="?score_text_ref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>