<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- here is for common theme that do not change -->


    <!-- subreddit -->
    <style name="subreddit_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/subreddit_item_minheight</item>
    </style>

    <style name="common_score_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="common_info_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="common_comment_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="common_selfpost_body">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">3dip</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">false</item>
        <item name="android:background">@drawable/bg_content_text</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="common_label_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_subreddit_text</item>
        <item name="android:textColor">#0099CC</item>
        <item name="android:paddingLeft">2dip</item>
        <item name="android:paddingRight">2dip</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="common_spinner_promote">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">6dip</item>
        <item name="android:textColor">#00b5f7</item>
    </style>

    <style name="common_spinner" parent="android:Widget.Spinner">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:layout_gravity">center|center_vertical|center_horizontal</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="common_comment_author">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="common_comment_body">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="common_karma_number">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">68dip</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="common_karam_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="common_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">6dp</item>
    </style>

    <!-- vote function -->
    <style name="vote_wraper">
        <item name="android:layout_width">38dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="vote_up_wraper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">center_horizontal|bottom</item>
    </style>

    <style name="vote_down_wraper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">center_horizontal|top</item>
    </style>

    <style name="vote_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="vote_score">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="edittext_dark" parent="android:style/Widget.EditText">
        <item name="android:background">@drawable/edit_text_holo_dark</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorHint">#484848</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="edittext_light" parent="android:style/Widget.EditText">
        <item name="android:background">@drawable/edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="button_dark" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/btn_default_holo_dark</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="image_big">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">260dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="nsfw">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_nsfw</item>
        <item name="android:paddingLeft">2dip</item>
        <item name="android:paddingRight">2dip</item>
        <item name="android:text">NSFW</item>
        <item name="android:textColor">#ff0909</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="button_send">
        <item name="android:layout_width">48dip</item>
        <item name="android:layout_height">48dip</item>
        <item name="android:padding">8dip</item>
        <item name="android:src">@drawable/icon_conversation_send</item>
        <item name="android:background">@drawable/bg_imagebutton_state</item>
    </style>

    <style name="progressbar_black" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal_holo_dark</item>
        <item name="android:minHeight">3dip</item>
        <item name="android:maxHeight">3dip</item>
    </style>

    <style name="progressbar_light" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal_holo_light</item>
        <item name="android:minHeight">3dip</item>
        <item name="android:maxHeight">3dip</item>
    </style>

    <style name="common_editor_light" parent="edittext_light">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:textColorHint">#666666</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="common_edit_dark" parent="edittext_dark">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:textColorHint">#666666</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RadioHoloDark" parent="android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/btn_radio_holo_dark</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="RadioHoloLight" parent="android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/btn_radio_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="textShadowBlack">
        <item name="android:shadowColor">#66000000</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">0.01</item>
    </style>

    <style name="textShadowBlackDark">
        <item name="android:shadowColor">#99000000</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">0.01</item>
    </style>

    <style name="textShadowBlackUp">
        <item name="android:shadowColor">#66000000</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-2.0</item>
        <item name="android:shadowRadius">0.01</item>
    </style>

    <style name="textShadowWhite">
        <item name="android:shadowColor">#66ffffff</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">0.01</item>
    </style>

    <style name="common_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#1abcff</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="common_horizontal_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <!-- image detail info -->

    <style name="common_image_info_title">
        <item name="android:maxLines">4</item>
    </style>

    <style name="common_image_info_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="common_image_info_score">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="common_image_info_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">2dip</item>
        <item name="android:paddingRight">2dip</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditTextHoloDark" parent="android:style/Widget.EditText">
        <item name="android:background">@drawable/edit_text_holo_dark</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="AlertDialogHoloDark">
        <item name="android:fullDark">@drawable/dialog_full_holo_dark</item>
        <item name="android:topDark">@drawable/dialog_top_holo_dark</item>
        <item name="android:centerDark">@drawable/dialog_middle_holo_dark</item>
        <item name="android:bottomDark">@drawable/dialog_bottom_holo_dark</item>
        <item name="android:fullBright">@drawable/dialog_full_holo_dark</item>
        <item name="android:centerBright">@drawable/dialog_middle_holo_dark</item>
        <item name="android:bottomBright">@drawable/dialog_bottom_holo_dark</item>
        <item name="android:bottomMedium">@drawable/dialog_bottom_holo_dark</item>
        <item name="android:centerMedium">@drawable/dialog_middle_holo_dark</item>
    </style>

    <style name="AlertDialogHoloLight">
        <item name="android:fullDark">@drawable/dialog_full_holo_light</item>
        <item name="android:topDark">@drawable/dialog_top_holo_dark</item>
        <item name="android:centerDark">@drawable/dialog_middle_holo_light</item>
        <item name="android:bottomDark">@drawable/dialog_bottom_holo_light</item>
        <item name="android:fullBright">@drawable/dialog_full_holo_light</item>
        <item name="android:centerBright">@drawable/dialog_middle_holo_light</item>
        <item name="android:bottomBright">@drawable/dialog_bottom_holo_light</item>
        <item name="android:bottomMedium">@drawable/dialog_bottom_holo_light</item>
        <item name="android:centerMedium">@drawable/dialog_middle_holo_light</item>
    </style>

</resources>